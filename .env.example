# ========================================
# BUILDUMKM - ENVIRONMENT VARIABLES
# ========================================
# Copy file ini menjadi .env dan isi dengan nilai yang sesuai

# ========================================
# API CONFIGURATION
# ========================================
# Backend API Base URL
VITE_API_URL=http://localhost:5000/api

# Alternative untuk production
# VITE_API_URL=https://api.buildumkm.com/api

# ========================================
# AUTHENTICATION
# ========================================
# JWT Token Configuration
VITE_JWT_SECRET_KEY=your-super-secret-jwt-key-change-this-in-production
VITE_TOKEN_EXPIRY=7d

# Session storage key (localStorage key)
VITE_AUTH_STORAGE_KEY=buildumkm_user
VITE_TOKEN_STORAGE_KEY=buildumkm_token

# ========================================
# APPLICATION SETTINGS
# ========================================
# App Name
VITE_APP_NAME=BuildUMKM
VITE_APP_VERSION=1.0.0

# Environment (development, staging, production)
VITE_ENV=development

# ========================================
# EXTERNAL SERVICES (Optional)
# ========================================
# Google Analytics (jika digunakan)
# VITE_GA_TRACKING_ID=UA-XXXXXXXXX-X

# Firebase (jika digunakan untuk hosting/storage)
# VITE_FIREBASE_API_KEY=
# VITE_FIREBASE_AUTH_DOMAIN=
# VITE_FIREBASE_PROJECT_ID=
# VITE_FIREBASE_STORAGE_BUCKET=
# VITE_FIREBASE_MESSAGING_SENDER_ID=
# VITE_FIREBASE_APP_ID=

# Cloudinary (untuk upload images)
# VITE_CLOUDINARY_CLOUD_NAME=
# VITE_CLOUDINARY_API_KEY=
# VITE_CLOUDINARY_API_SECRET=

# Email Service (untuk contact form)
# VITE_EMAIL_SERVICE_ID=
# VITE_EMAIL_TEMPLATE_ID=
# VITE_EMAIL_PUBLIC_KEY=

# ========================================
# PAYMENT GATEWAY (Optional - untuk fitur payment)
# ========================================
# Midtrans
# VITE_MIDTRANS_CLIENT_KEY=
# VITE_MIDTRANS_SERVER_KEY=

# ========================================
# FEATURE FLAGS
# ========================================
# Enable/Disable features
VITE_ENABLE_REGISTRATION=true
VITE_ENABLE_GOOGLE_LOGIN=false
VITE_ENABLE_PAYMENT=false
VITE_ENABLE_CHATBOT=false

# ========================================
# DEBUGGING
# ========================================
# Show API logs in console
VITE_DEBUG_API=true
VITE_DEBUG_AUTH=true

# ========================================
# RATE LIMITING (untuk backend)
# ========================================
# Max requests per window
VITE_RATE_LIMIT_MAX=100
VITE_RATE_LIMIT_WINDOW=15m

# ========================================
# FILE UPLOAD
# ========================================
# Max file size in MB
VITE_MAX_FILE_SIZE=5
# Allowed file types
VITE_ALLOWED_FILE_TYPES=image/jpeg,image/png,image/webp

# ========================================
# NOTES
# ========================================
# - Semua variable dengan prefix VITE_ akan tersedia di frontend
# - Variable tanpa VITE_ hanya tersedia di backend/build process
# - Jangan commit file .env ke git (sudah di .gitignore)
# - Gunakan .env.example sebagai template
